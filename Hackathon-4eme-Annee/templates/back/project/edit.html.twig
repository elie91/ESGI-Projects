    {% include 'back/project/_delete_form.html.twig' %}
{% endblock %}

{% block content %}
    <section class="mt-3">
        <div class="container-fluid">
            <div class="card">
                <div class="card-body">
                    {% include 'back/project/_form.html.twig' %}
