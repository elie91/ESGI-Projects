{% extends 'front/index.html.twig' %}

{% block title %}{{ 'page.reset.title'|trans }}{% endblock %}

{% block content %}
    <section class="pt-5">
        <div class="container pt-5">
            <div class="row">
                <div class="col-md-6 offset-md-3">
                    <div class="card">
                        <div class="card-body">
                            <h1 class="h3 mb-3 font-weight-normal">{{ 'page.reset.title'|trans }}</h1>
                            {{ form_start(form) }}
                            <div class="row">
                                <div class="col-md-12">
                                    {{ form_row(form.plainPassword.first) }}
                                </div>
                                <div class="col-md-12">
                                    {{ form_row(form.plainPassword.second) }}
                                </div>
                            </div>
                            <input type="hidden" name="token" value="{{ token }}">
                            <div class="text-center">
                                <button type="submit" class="btn btn-primary">
                                    {{'button.send'|trans}}
                                </button>
                            </div>
                            {{ form_end(form) }}
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>
{% endblock %}