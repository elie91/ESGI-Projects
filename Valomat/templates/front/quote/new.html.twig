{% extends 'front/index.html.twig' %}

{% block javascripts %}
    {{ parent() }}
    {{ encore_entry_script_tags('quote') | replace({'src=' : 'defer src='}) | raw }}
{% endblock %}
{% block content %}
    <section class="min-vh-100">
        <div class="container pt-5">
            <div class="row align-items-center mb-3">
                <div class="col-md-6">
                    <h1>{{ 'quote.request'|trans }}</h1>
                </div>
                <div class="col-md-6 text-right">
                    <a class="btn btn-primary" href="{{ path('front_index') }}"><i class="fas fa-arrow-left"></i>{{'button.back'|trans}}</a>
                </div>
            </div>
            <div class="card">
                <div class="card-body">
                    {{ include('back/quote/_form.html.twig', {'button_label': 'button.send'}) }}
                </div>
            </div>
        </div>
    </section>
{% endblock %}
