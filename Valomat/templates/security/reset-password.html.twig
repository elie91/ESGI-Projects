{% extends 'front/index.html.twig' %}

{% block title %}{{ 'user.button.reset'|trans }}{% endblock %}

{% block content %}
    <section class="min-vh-100">
        <div class="container pt-5">
            <div class="row">
                <div class="col-md-6 offset-md-3">
                    <div class="card">
                        <div class="card-body">
                            <h1 class="h3 mb-3 font-weight-normal">{{ 'user.button.reset'|trans }}</h1>
                            {{ form_start(form) }}
                            <div class="col-md-12 mb-3">
                                {{ form_label(form.plainPassword.first) }}
                                {{ form_widget(form.plainPassword.first) }}
                                <div class="invalid-feedback"
                                     {% if form_errors(form.plainPassword.first) %}style="display: block"{% endif %}>
                                    {{ form_errors(form.plainPassword.first) }}
                                </div>
                            </div>

                            <div class="col-md-12 mb-3">
                                {{ form_label(form.plainPassword.second) }}
                                {{ form_widget(form.plainPassword.second) }}
                                <div class="invalid-feedback"
                                     {% if form_errors(form.plainPassword.second) %}style="display: block"{% endif %}>
                                    {{ form_errors(form.plainPassword.second) }}
                                </div>
                            </div>
                            <input type="hidden" name="token" value="{{ token }}">
                            <button type="submit" class="btn btn-primary">
                                {{'button.valid'|trans}}
                            </button>
                            {{ form_end(form) }}
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>
{% endblock %}