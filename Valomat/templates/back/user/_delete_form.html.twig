<form class="d-inline-block" method="post" action="{{ path('back_user_delete', {'id': user.id}) }}" onsubmit="return confirm('{{ 'user.button.confirmDelete'|trans }}');">
    <input type="hidden" name="_method" value="DELETE">
    <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ user.id) }}">
    <button class="btn btn-danger sm-mb-1"><i class="fas fa-trash"></i>{{ 'button.delete'|trans }}</button>
</form>

