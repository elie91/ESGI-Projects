{% extends 'back/index.html.twig' %}

{% block content %}
    <section class="mt-3">
        <div class="container">
            <div class="card">
                <div class="card-body">
                    <h1 class="h2 mb-5 text-center">{{ 'tracking.title'|trans }}</h1>
                    <ul class="row list-inline tracking" data-url="{{ absolute_url(path('back_user_refresh')) }}">
                        <li class="col-md-4 list-inline-item">
                            <div class="text-center px-4">
                                <div class="mb-4">
                                    <i class="fas fa-2x fa-user-plus"></i>
                                </div>
                                <div class="mb-4">
                                    <span class="check {% if user.state >= 1 %}active{% endif %}">
                                      <i class="fa fa-check"></i>
                                    </span>
                                </div>
                                <h3 class="text-uppercase mb-3">
                                    <span class="font-weight-bold">01.</span>
                                    {{ 'tracking.account.short'|trans }}
                                </h3>
                                <p class="text-gray"><em>{{ 'tracking.account.message'|trans }}</em></p>
                            </div>
                        </li>
                        <li class="col-md-4 list-inline-item">
                            <div class="text-center px-4">
                                <div class="mb-4">
                                    <i class="fas fa-2x fa-file-import"></i>
                                </div>
                                <div class="mb-4">
                                    <span class="check {% if user.state >= 2 %}active{% elseif (user.state + 1) == 2 %}incoming{% endif %}">
                                      <i class="fa fa-check"></i>
                                    </span>
                                </div>
                                <h3 class="text-uppercase mb-3">
                                    <span class="font-weight-bold">02.</span>
                                    {{ 'tracking.import.short'|trans }}
                                </h3>
                                <p class="text-gray"><em>{{ 'tracking.import.message'|trans }}</em></p>
                            </div>
                        </li>
                        <li class="col-md-4 list-inline-item">
                            <div class="text-center px-4">
                                <div class="mb-4">
                                    <i class="fas fa-2x fa-clipboard-check"></i>
                                </div>
                                <div class="mb-4">
                                    <span class="check {% if user.state >= 3 %}active{% elseif (user.state + 1) == 3 %}incoming{% endif %}">
                                      <i class="fa fa-check"></i>
                                    </span>
                                </div>
                                <h3 class="text-uppercase mb-3">
                                    <span class="font-weight-bold">03.</span>
                                    {{ 'tracking.success.short'|trans }}
                                </h3>
                                <p class="text-gray"><em>{{ 'tracking.success.message'|trans }}</em></p>
                            </div>
                        </li>
                    </ul>
                </div>
            </div>
        </div>
    </section>
{% endblock %}