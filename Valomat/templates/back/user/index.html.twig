{% extends 'back/index.html.twig' %}

{% block title %}{{ 'user.list.title'|trans }}{% endblock %}

{% block content %}

<section class="mt-3">
    <div class="container-fluid">
        <div class="row align-items-center mb-3">
            <div class="col-md-6">
                <h1>{{ 'user.list.title'|trans }}</h1>
            </div>
            <div class="col-md-6 text-right">
                <a class="btn btn-primary" href="{{ path('back_user_new') }}">
                    <i class="fas fa-plus"></i>{{ 'user.button.add'|trans }}
                </a>
            </div>
        </div>

        <div class="card">
            <div class="card-body">
                <table class="table data-table">
                    <thead>
                    <tr>
                        <th>{{ 'user.column.email'|trans }}</th>
                        <th class="hidden-md">{{ 'user.column.company'|trans }}</th>
                        <th>Actions</th>
                    </tr>
                    </thead>
                    <tbody>
                    {% for user in users %}
                        {% if user != current_user %}
                            <tr>
                                <td>{{ user.email }}</td>
                                <td class="hidden-md">{{ user.company}}</td>
                                <td class="text-right">
                                    <a class="btn btn-primary" href="{{ path('back_user_show', {'id': user.id}) }}">
                                        <i class="fas fa-search-plus"></i><span>{{ 'button.show'|trans }}</span>
                                    </a>
                                    <a class="btn btn-primary" href="{{ path('back_user_edit', {'id': user.id}) }}">
                                        <i class="fas fa-pen"></i><span>{{ 'button.edit'|trans }}</span>
                                    </a>
                                </td>
                            </tr>
                        {% endif %}
                    {% else %}
                        <tr>
                            <td colspan="3">{{ 'user.list.nouser'|trans }}</td>
                        </tr>
                    {% endfor %}
                    </tbody>
                </table>
            </div>
        </div>

    </div>
</section>
{% endblock %}
