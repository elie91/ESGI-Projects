{% extends 'back/index.html.twig' %}

{% block content %}
    <section class="mt-3">
        <div class="container">
            <div class="row align-items-center mb-3">
                <div class="col-md-6">
                    <h1>{{ category.title }} <span class="text-muted font-weight-light">ID : {{ category.id }}</span></h1>
                </div>
                <div class="col-md-6 text-right">
                    <a class="btn btn-primary" href="{{ path('back_category_index') }}"><i class="fas fa-arrow-left"></i>{{'button.back'|trans}}</a>

                    <a class="btn btn-primary" href="{{ path('back_category_edit', {'id': category.id }) }}"><i class="fas fa-pen"></i>{{ 'button.edit'|trans }}</a>

                    {{ include('back/category/_delete_form.html.twig') }}
                </div>
                <div class="col-md-12">
                    <div class="card mt-3">
                        <div class="card-body">
                            <table class="table">
                                <tbody>
                                <tr>
                                    <th class="border-0">{{'product.column.description'|trans}}</th>
                                    <td class="border-0">{{ category.description }}</td>
                                </tr>
                                <tr>
                                    <th>{{'product.column.metaTitle'|trans}}</th>
                                    <td>{{ category.metaTitle }}</td>
                                </tr>
                                <tr>
                                    <th>{{'product.column.metaDescription'|trans}}</th>
                                    <td>{{ category.metaDescription }}</td>
                                </tr>
                                </tbody>
                            </table>
                        </div>
                    </div>

                </div>
            </div>
        </div>
    </section>

{% endblock %}
