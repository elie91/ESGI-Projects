{% extends 'back/index.html.twig' %}

{% block content %}
    <section class="mt-3">
        <div class="container">
            <div class="row align-items-center mb-3">
                <div class="col-md-6">
                    <h1>{{ 'product.list.import'|trans }}</h1>
                </div>
                <div class="col-md-6 text-right">
                    <a class="btn btn-primary" href="{{ path('back_index') }}">
                        <i class="fas fa-arrow-left"></i>{{ 'button.back'|trans }}
                    </a>
                </div>
            </div>
            <div class="card">
                <div class="card-body">
                    {{ form_start(form) }}
                    <div class="custom-file mb-3">
                        {{ form_widget(form.file) }}
                        <label class="custom-file-label" for="validatedCustomFile">{{ form_label(form.file) }}</label>
                        <div class="invalid-feedback" {% if form_errors(form.file) %}style="display: block"{% endif %}>
                            {{ form_errors(form.file) }}
                        </div>
                        <small id="fileHelpBlock" class="form-text text-muted">
                            {{ form_help(form.file) }}
                        </small>
                    </div>
                    <div class="text-center">
                        <button class="btn btn-primary mt-2">{{ button_label|default('product.list.import')|trans }}</button>
                    </div>
                    {{ form_end(form) }}
                </div>
            </div>
            {% if messages and (messages.success|length > 0 or messages.errors|length > 0) %}
                <div class="card mt-3">
                    <div class="card-body">
                        <div class="row">
                            {% if messages.success|length > 0 %}
                                <div class="col-md-6">
                                    <div class="alert alert-success">
                                        <ul class="list-unstyled">
                                            {% for message in messages.success %}
                                                <li>{{ message }}</li>
                                            {% endfor %}
                                        </ul>
                                    </div>
                                </div>
                            {% endif %}
                            {% if messages.errors|length > 0 %}
                                <div class="col-md-6">
                                    <div class="alert alert-danger">
                                        <ul class="list-unstyled">
                                            {% for message in messages.errors %}
                                                <li>{{ message }}</li>
                                            {% endfor %}
                                        </ul>
                                    </div>
                                </div>
                            {% endif %}
                        </div>
                    </div>
                </div>
            {% endif %}
        </div>
    </section>
{% endblock %}

{% block javascripts %}
    {{ encore_entry_script_tags('file') | replace({'src=' : 'defer src='}) | raw }}
{% endblock %}