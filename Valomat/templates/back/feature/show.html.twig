{% extends 'back/index.html.twig' %}

{% block title %}{{ feature.name }}{% endblock %}

{% block content %}
    <section class="mt-3">
        <div class="container">
            <div class="row align-items-center mb-3">
                <div class="col-md-6">
                    <h1>{{ feature.name }} <span class="text-muted font-weight-light">ID : {{ feature.id }}</span></h1>
                </div>
                <div class="col-md-6 text-right">
                    <a class="btn btn-primary sm-mb-1" href="{{ path('back_feature_index') }}"><i class="fas fa-arrow-left"></i>{{'button.back'|trans}}</a>

                    <a class="btn btn-primary sm-mb-1" href="{{ path('back_feature_edit', {'id': feature.id}) }}"><i class="fas fa-pen"></i>{{ 'button.edit'|trans }}</a>

                    {{ include('back/feature/_delete_form.html.twig') }}
                </div>
            </div>
            <ul class="list-group">
                {% for value in feature.featureValues %}
                    <li class="list-group-item d-flex justify-content-between align-items-center">
                        <span>{{ value.value }}</span>
                        <span>
                            <a class="btn btn-primary" href="{{ path('back_feature_value_edit', {'id': value.id}) }}">
                                <i class="fas fa-pen"></i><span>{{ 'button.edit'|trans }}</span>
                            </a>
                            {{ include('back/feature_value/_delete_form.html.twig') }}
                        </span>
                    </li>
                {% else %}
                    <li>{{ 'featureValue.list.novalues'|trans }}</li>
                {% endfor %}
            </ul>
        </div>
    </section>
{% endblock %}
