{% extends 'back/index.html.twig' %}
{% block content %}
    <section class="mt-3">
        <div class="container">
            <div class="row mb-3 align-items-center">
                <div class="col-md-6">
                    <h1>{{ product.name }} <span class="text-muted font-weight-light">ID : {{ product.id }}</span></h1>
                </div>
                <div class="col-md-6 text-right">
                    <a class="btn btn-primary sm-mb-1" href="{{ path('back_product_index') }}">
                        <i class="fas fa-arrow-left"></i>{{ 'button.back'|trans }}
                    </a>
                    {% if is_granted('ROLE_ADMIN') %}
                        <a class="btn btn-primary sm-mb-1" href="{{ path('back_product_edit', {'id': product.id}) }}">
                            <i class="fas fa-pen"></i>{{ 'button.edit'|trans }}
                        </a>
                        {{ include('back/product/_delete_form.html.twig') }}
                    {% endif %}
                </div>
            </div>
            <div class="card mt-3">
                <div class="card-body">
                    <table class="table">
                        <tbody>
                        <tr>
                            <th class="border-0">{{ 'product.column.reference'|trans }}</th>
                            <td class="border-0">{{ product.reference }}</td>
                        </tr>
                        <tr>
                            <th>{{'product.column.description'|trans}}</th>
                            <td>{{ product.description }}</td>
                        </tr>
                        <tr>
                            <th>{{ 'category.name'|trans }}</th>
                            <td>
                                {% for category in product.categories %}
                                    {{ category.title }}
                                {% else %}
                                    {{ 'product.list.nocategory'|trans }}
                                {% endfor %}
                            </td>
                        </tr>
                        <tr>
                            <th>{{ 'product.column.rewrittenUrl'|trans }}</th>
                            <td>{{ product.rewrittenUrl }}</td>
                        </tr>
                        <tr>
                            <th>{{ 'product.column.metaTitle'|trans }}</th>
                            <td>{{ product.metaTitle }}</td>
                        </tr>
                        <tr>
                            <th>{{ 'product.column.metaDescription'|trans }}</th>
                            <td>{{ product.metaDescription }}</td>
                        </tr>
                        <tr>
                            <th>{{ 'product.column.quantity'|trans }}</th>
                            <td>{{ product.quantity }}</td>
                        </tr>
                        <tr>
                            <th>{{ 'product.column.aloy'|trans }}</th>
                            <td>{{ product.aloy }}</td>
                        </tr>
                        <tr>
                            <th>{{ 'product.column.width'|trans }}</th>
                            <td>{{ product.width }}</td>
                        </tr>
                        <tr>
                            <th>{{ 'product.column.height'|trans }}</th>
                            <td>{{ product.height }}</td>
                        </tr>
                        <tr>
                            <th>{{ 'product.column.weight'|trans }}</th>
                            <td>{{ product.weight }}</td>
                        </tr>
                        <tr>
                            <th>{{'product.column.depth'|trans}}</th>
                            <td>{{ product.depth }}</td>
                        </tr>
                        <tr>
                            <th>{{ 'product.column.state'|trans }}</th>
                            <td>{{ product.state }}</td>
                        </tr>
                        <tr>
                            <th>{{ 'product.column.standardIndex'|trans }}</th>
                            <td>{{ product.standardIndex }}</td>
                        </tr>
                        <tr>
                            <th>{{ 'product.column.elaborator'|trans }}</th>
                            <td>{{ product.elaborator }}</td>
                        </tr>
                        {% if is_granted('ROLE_ADMIN') %}
                            <tr>
                                <th>{{ 'quote.column.createdAt'|trans }}</th>
                                <td>{{ product.createdAt|date('d/m/Y') }}</td>
                            </tr>
                        {% endif %}
                        </tbody>
                    </table>
                </div>
            </div>

        </div>
    </section>
{% endblock %}
