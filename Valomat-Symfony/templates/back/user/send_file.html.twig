{% extends 'back/index.html.twig' %}

{% block content %}
<section class="mt-3">
    <div class="container">
        <div class="row align-item-center mb-3">
            <div class="col-md-6">
                <h1>{{ 'user.button.send'|trans }}</h1>
            </div>
            <div class="col-md-6 text-right">
                <a class="btn btn-primary" href="{{ path(is_granted('ROLE_ADMIN') ? 'back_index' : 'back_product_index') }}"><i class="fas fa-arrow-left"></i>{{ 'button.back'|trans }}</a>
            </div>
        </div>
        <p class="text-muted">{{ 'user.button.sendDescription'|trans }} <a href="{{ path('back_user_tracking') }}">{{ 'user.button.yourAccount'|trans }}</a> {{ 'user.button.example'|trans }} <a href="{{ asset('build/example.csv') }}" download="example.csv">{{ 'user.button.here'|trans }}</a>.</p>
        <div class="card">
            <div class="card-body">
                {{ form_start(form) }}
                <div class="custom-file mb-3">
                    {{ form_widget(form.file) }}
                    <label class="custom-file-label" for="validatedCustomFile">{{ form_label(form.file)}}</label>
                    <div class="invalid-feedback" {% if form_errors(form.file) %}style="display: block"{% endif %}>
                        {{form_errors(form.file)}}
                    </div>
                    <small id="fileHelpBlock" class="form-text text-muted">
                        {{ form_help(form.file) }}
                    </small>
                </div>
                <div class="text-center">
                    <button class="btn btn-primary mt-2">{{ button_label|default('user.button.send'|trans) }}</button>
                </div>
                {{ form_end(form) }}
            </div>
        </div>
    </div>
</section>
{% endblock %}

{% block javascripts %}
    {{ encore_entry_script_tags('file') | replace({'src=' : 'defer src='}) | raw }}
{% endblock %}