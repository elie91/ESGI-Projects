<form class="d-inline-block" method="post" action="{{ path('back_category_delete', {'id': category.id}) }}" onsubmit="return confirm('{{ 'category.button.confirmDelete'|trans }}');">
    <input type="hidden" name="_method" value="DELETE">
    <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ category.id) }}">
    <button class="btn btn-danger"><i class="fas fa-trash"></i>{{ 'button.delete'|trans }}</button>
</form>
