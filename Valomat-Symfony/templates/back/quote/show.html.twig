{% extends 'back/index.html.twig' %}

{% block title %}{% endblock %}

{% block content %}
    <section class="mt-3">
        <div class="container">
            <div class="row align-items-center mb-3">
                <div class="col-md-6">
                    <h1>{{ "quote.button.show"|trans }}</h1>
                </div>
                <div class="col-md-6 text-right">
                    <a class="btn btn-primary" href="{{ path('back_quote_index') }}"><i
                                class="fas fa-arrow-left"></i>{{ 'button.back'|trans }}</a>

                    <a class="btn btn-primary" href="{{ path('back_quote_edit', {'id': quote.id }) }}"><i
                                class="fas fa-pen"></i>{{ 'button.edit'|trans }}</a>
                </div>
            </div>
            <div class="card mt-3">
                <div class="card-body">
                    <table class="table">
                        <tbody>
                        <tr>
                            <th class="border-0">{{ 'user.column.company'|trans }}</th>
                            <td class="border-0">{{ quote.company }}</td>
                        </tr>
                        <tr>
                            <th>{{ 'user.column.email'|trans }}</th>
                            <td>{{ quote.email }}</td>
                        </tr>
                        <tr>
                            <th>{{ 'user.column.phone'|trans }}</th>
                            <td>{{ quote.phone }}</td>
                        </tr>
                        <tr>
                            <th>{{ 'user.column.lastname'|trans }}</th>
                            <td>{{ quote.lastname }}</td>
                        </tr>
                        <tr>
                            <th>{{ 'user.column.firstname'|trans }}</th>
                            <td>{{ quote.firstname }}</td>
                        </tr>
                        <tr>
                            <th>Message</th>
                            <td>{{ quote.message }}</td>
                        </tr>
                        <tr>
                            <th>{{ 'product.singular'|trans }}</th>
                            <td>{{ quote.product.name }}</td>
                        </tr>
                        <tr>
                            <th>{{ 'quote.column.createdAt'|trans }}</th>
                            <td>{{ quote.createdAt|date('d M Y') }}</td>
                        </tr>
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </section>

{% endblock %}

