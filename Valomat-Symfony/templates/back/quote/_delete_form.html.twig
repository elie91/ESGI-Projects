<form class="d-inline-block" method="post" action="{{ path('back_quote_delete', {'id': quote.id}) }}" onsubmit="return confirm('Are you sure you want to delete this item?');">
    <input type="hidden" name="_method" value="DELETE">
    <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ quote.id) }}">
    <button class="btn btn-danger"><i class="fas fa-trash"></i>Delete</button>
</form>
